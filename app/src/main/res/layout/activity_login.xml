<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bglogin"
    android:gravity="center"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="-90dp"
        android:src="@drawable/logo_dts" />

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="350dp"
        android:layout_height="290dp"
        android:orientation="vertical"
        android:background="@drawable/radius">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/user"
            android:paddingTop="10dp"
            android:text="Username"
            android:textColor="@color/putih"
            android:textColorHighlight="#EAE2E2"
            android:textColorHint="#604F4F"
            android:textColorLink="#FAF1F1"
            android:textSize="18dp" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username kamu"
            android:textAllCaps="true"
            android:textColorHighlight="@color/hijautoska"
            android:textColorLink="#FFFFFF"
            android:textCursorDrawable="@color/hijautoska"
            android:textIsSelectable="true" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/pass"
            android:text="Password"
            android:textColor="@color/putih"
            android:textColorHighlight="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textCursorDrawable="@color/biru"
            android:textIsSelectable="false"
            android:textSize="18dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password kamu" />



        <Button
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:background="@drawable/rounded_corner"
            android:id="@+id/signupini"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="9dp"
                android:paddingTop="20dp"
                android:autoLink="web"
                android:text="Belum punya akun? "
                android:textColor="#D8FFF4"
                android:textSize="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:paddingTop="20dp"
                android:id="@+id/link"
                android:text="Signup dulu yuk"
                android:textColor="#bbf26d"
                android:textSize="16dp"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>